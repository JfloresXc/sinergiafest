---
import PageHeader from "../components/PageHeader.astro";
import PageFooter from "../components/PageFooter.astro";
//import EventSlider from "../components/EventSlider.astro";

import HomePagePosts from "../components/Blog/HomePagePosts.astro";
import EventsTable from "../components/EventsTable.astro";
import Ticker from "../components/Ticker.astro";

import BannerCard from "../components/BannerEvents.astro";
import { playlists, morePlaylists } from "../lib/data";

import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="Home">
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-context"
    style="min-height:300px;--context-color:#fff;"
  >
    <PageHeader />

    <Hero title="Agenda del evento" />

    <Ticker />

    <h2
      class="text-4xl my-8 md:text-5xl lg:text-6xl font-bold text-white text-center mt-12"
    >
      UPCOMING CONCERT
    </h2>

    <EventsTable />

    <p class="mt-4 max-w-2xl mx-auto bg-black px-6 py-12 text-left">
      Experience the thrill of live music, celebrate diverse cultures, and
      immerse yourself in captivating art. Get ready to embark on an
      extraordinary journey of entertainment.
    </p>

    <HomePagePosts />

    <PageFooter />
  </div>
</Layout>
