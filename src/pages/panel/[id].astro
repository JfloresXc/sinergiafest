---
const { id } = Astro.params;
import DotsButton from "../../components/DotsButton.astro";
import LikeButton from "../../components/LikeButton.astro";
import PageHeader from "../../components/PageHeader.astro";
import Layout from "../../layouts/Layout.astro";
import { PANELS } from "../../lib/panels";
import PageFooter from "../../components/PageFooter.astro";

export function getStaticPaths() {
  return PANELS.map((panelKey) => ({
    params: {
      id: panelKey.id,
    },
  }));
}

const panel = PANELS.find((panelKey) => panelKey.id == id);
---

<Layout image={"banner.jpg"} title={panel?.title || "404"}>
  <div
    class="relative bg-gradient-to-r from-[#243642] to-[#010507] min-h-full flex flex-col overflow-x-hidden"
    transition:name=`panel ${panel?.id} box`
  >
    <PageHeader />

    <div
      class="flex flex-col items-center md:flex-row md:items-stretch gap-8 pt-12 sm:pt-24 px-4 sm:px-32"
    >
      <div class="flex flex-col w-full sm:w-fit">
        <div class="h-52 w-full md:w-52 flex-none">
          <img
            src="/banner.jpg"
            alt="Panel de Sinergiafest"
            class="object-cover h-full w-full shadow-[5px_0_30px_0px_rgba(0,0,0,0.3)]"
            transition:name=`panel ${panel?.id} image`
          />
        </div>
        <a
          href="#"
          class="bg-customPrimary100 text-white py-2 px-16 hover:opacity-85 mt-4 text-center w-full"
          >Agendar</a
        >
      </div>
      <div class="flex flex-col">
        <div class="flex flex-col">
          <h1 class="title-clamp font-bold block">
            Panel #{panel?.id}
            {panel?.title}
            <span transition:name=`panel ${panel?.id} title`></span>
          </h1>
        </div>
        <div class="flex-1 flex">
          <div class="text-sm sm:text-base mt-2">
            <div class="my-2">
              <span class="font-semibold sm:text-xl">{panel?.date}</span>
            </div>
            <span class="text-gray-300">
              {panel?.address}
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="flex-1 blur-100 px-4 sm:px-32 pt-6 pb-12 sm:pt-12 sm:pb-24">
      <div class="sm:px-32 pt-4">
        <div class="space-y-6">
          <div>
            <p class="text-white text-sm sm:text-base">
              {panel?.description}
            </p>
          </div>

