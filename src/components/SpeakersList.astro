<script>
    function initspeakers() {
        const speakers = [
            {
                speaker: "Jose Flores",
                profesion:
                    "Desarrollador web 🧑🏻‍🚀 | Presidente Área de Programación IEEE CS 🚀 | Ingeniero de Sistemas 🏗️",
                url: "jose-flores.png",
            },
            {
