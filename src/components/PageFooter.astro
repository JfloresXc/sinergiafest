---
import Brand from "./Brand.astro";
---

<div
  class="relative z-10 py-4"
  transition:name="page footer"
  transition:persist
>
  <footer class="text-customSecondary100 pt-8">
    <div class="px-4 md:px-8">
      <div
        class="flex flex-col md:flex-row justify-center items-center md:items-start mb-8"
      >
        <div class="mb-6 md:mb-0">
          <div class="h-6"><Brand /></div>
          <div class="flex space-x-4 mt-4 justify-center">
            <a
              href="https://www.linkedin.com/company/ieee-computer-society-untels"
              target="_blank"
              class="text-customSecondary100"><i class="fab fa-linkedin"></i></a
            >
            <a
              href="https://www.instagram.com/ieee.cs.untels/"
              target="_blank"
              class="text-customSecondary100"
              ><i class="fab fa-instagram"></i></a
            >
            <a
              href="https://www.tiktok.com/@ieeecsuntels?_t=8qSxqbL0ByX&_r=1"
              target="_blank"
              class="text-customSecondary100"><i class="fab fa-tiktok"></i></a
            >
            <a
              href="https://www.facebook.com/ieee.untels.cs"
              target="_blank"
              class="text-customSecondary100"><i class="fab fa-facebook"></i></a
            >
          </div>
        </div>
        <div class="grid-cols-3 md:grid-cols-3 gap-8 md:gap-16 hidden">
          <div>
            <h3 class="font-bold mb-2">Events</h3>
            <ul>
              <li>
                <a href="#" class="hover:underline text-sm sm:text-normal"
                  >Music</a
                >
              </li>
              <li>
                <a href="#" class="hover:underline text-sm sm:text-normal"
                  >Exhibition</a
                >
              </li>
              <li>
                <a href="#" class="hover:underline text-sm sm:text-normal"
                  >Culture</a
                >
              </li>
              <li>
                <a href="#" class="hover:underline text-sm sm:text-normal"
                  >Art</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold mb-2">Company</h3>
            <ul>
              <li>
                <a href="#" class="hover:underline text-sm sm:text-normal"
                  >About us</a
                >
              </li>
              <li>
                <a href="#" class="hover:underline text-sm sm:text-normal"
                  >Contact</a
                >
              </li>
              <li>
                <a href="#" class="hover:underline text-sm sm:text-normal"
                  >Gallery</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold mb-2">More</h3>
            <ul>
              <li>
                <a href="#" class="hover:underline text-sm sm:text-normal"
                  >Blog</a
                >
              </li>
              <li>
                <a href="#" class="hover:underline text-sm sm:text-normal"
                  >Privacy</a
                >
              </li>
              <li>
                <a href="#" class="hover:underline text-sm sm:text-normal"
                  >Term</a
                >
              </li>
              <li>
                <a href="#" class="hover:underline text-sm sm:text-normal"
                  >Security</a
                >
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </footer>
  <p class="text-center text-sm text-gray-700">
    Made with <span class="text-red-500">&hearts;</span> by <a
      href="https://jfloresxc.github.io/"
      target="_blank">Jose Flores</a
    >
  </p>
</div>
